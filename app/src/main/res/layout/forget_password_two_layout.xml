<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/forget_two_toolbar"
        style="@style/toolbar"
        toolbar:navigationIcon="@mipmap/back">
        <!-- 标题 -->
        <TextView
            android:id="@+id/forget_two_title"
            android:layout_gravity="center"
            style="@style/title"
            android:text="忘记密码" />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/forget_plaint"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginTop="@dimen/y8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/register_plaint"/>
        <TextView
            android:text="请输入您的新密码"
            android:layout_marginLeft="@dimen/x12"
            style="@style/hint_text_default"
            android:layout_alignTop="@id/forget_plaint"
            android:layout_toRightOf="@id/forget_plaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_marginLeft="@dimen/x34"
            android:layout_marginRight="@dimen/x34"
            android:layout_marginTop="@dimen/y50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y160">
            <LinearLayout
                android:paddingTop="@dimen/y10"
                android:paddingBottom="@dimen/y10"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="新密码    "
                    style="@style/text_default_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:singleLine="true"
                    android:id="@+id/forget_two_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    style="@style/hint_text_default"
                    android:hint="密码至少由6位数字组成"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:background="@color/gary"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_height="1dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:paddingTop="@dimen/y5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="确认密码"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x16"
                    style="@style/text_default_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    style="@style/hint_text_default"
                    android:singleLine="true"
                    android:id="@+id/forget_two_repassword"
                    android:inputType="textPassword"
                    android:layout_weight="1"
                    android:maxLength="16"
                    android:hint="请在此输入您的新密码"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/forget_two_finish"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/x34"
            android:layout_marginRight="@dimen/x34"
            android:layout_marginTop="@dimen/y250"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:enabled="false"
            android:text="确认修改"
            android:background="@drawable/login_clickable"/>
    </RelativeLayout>
</LinearLayout>