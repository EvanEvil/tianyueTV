    <LinearLayout
        android:id="@+id/ll_content"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--主播昵称，粉丝，关注-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x64"
            android:paddingLeft="@dimen/x10">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/live_details_anchorHeadIcon"
                android:layout_width="@dimen/x49"
                android:layout_height="@dimen/x49"
                android:layout_centerVertical="true"
                android:src="@mipmap/head_default"/>

            <TextView
                android:id="@+id/live_details_anchorNickName"
                style="@style/text_default_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x18"
                android:layout_marginTop="@dimen/y5"
                android:layout_toRightOf="@id/live_details_anchorHeadIcon"
                android:text="主播昵称"
                android:textColor="@android:color/black"/>

            <CheckBox
                android:id="@+id/live_details_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/y5"
                android:layout_marginRight="@dimen/x8"
                android:button="@null"
                android:drawableLeft="@drawable/like_selector"
                android:drawablePadding="@dimen/x5"
                android:text="关注"/>

            <TextView
                android:id="@+id/live_details_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/live_details_attention"
                android:layout_alignTop="@id/live_details_attention"
                android:layout_marginRight="@dimen/x13"
                android:layout_toLeftOf="@id/live_details_attention"
                android:gravity="center"
                android:text="粉丝：204"
                android:textColor="@android:color/black"/>


        </RelativeLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e2e2"/>
        <!--切换的页签-->
        <android.support.design.widget.TabLayout
            android:id="@+id/live_details_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/red"
            app:tabSelectedTextColor="@color/red"
            app:tabTextColor="#737373"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e2e2"/>
        <!--消息区域-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <android.support.v4.view.ViewPager
                android:id="@+id/live_details_viewPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2e2e2"/>

            <!--发送消息-->
            <LinearLayout
                android:id="@+id/ll_bottom_chatLayout"
                android:focusable="true"
                android:paddingBottom="@dimen/y5"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@mipmap/live_details_edit"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/y5"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/y5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_chatMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="输入想发送的内容"
                        style="@style/text_default"
                        android:paddingLeft="@dimen/x15"
                        android:imeOptions="actionSend"
                        android:singleLine="true" />
                    <TextView
                        android:layout_marginTop="@dimen/y5"
                        android:layout_marginBottom="@dimen/y5"
                        android:background="#e2e2e2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/btn_sendMsg"
                        android:layout_marginLeft="@dimen/x5"
                        android:text="发送"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x41" />
                </LinearLayout>
                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/chat_fragment_gift"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/gift_selector"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


