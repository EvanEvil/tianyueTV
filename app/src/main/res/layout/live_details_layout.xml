<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--视频播放-->
    <RelativeLayout
        android:id="@+id/rl_shipin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x273"
        android:background="@android:color/transparent">
        <!--视频控件-->
        <SurfaceView
            android:id="@+id/live_details_playView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:background="@mipmap/live_list_bcktools"/>
        <!--弹幕-->
        <master.flame.danmaku.ui.widget.DanmakuView
            android:id="@+id/danmaku_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x273"/>

        <!--顶部布局-->
        <LinearLayout
            android:id="@+id/ll_landTop_controller"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y54"
            android:background="@android:color/transparent"
            android:orientation="horizontal">
            <!--返回-->
            <ImageButton
                android:id="@+id/live_details_Top_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@null"
                android:paddingLeft="@dimen/x13"
                android:paddingRight="@dimen/x13"
                android:src="@mipmap/back_white"/>
            <!--标题-->
            <TextView
                android:id="@+id/live_details_landTop_title"
                style="@style/text_default_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="老王做模型"
                android:textColor="#b1b1b1"/>
            <!--观看人数-->
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_landTop_personNum"
                style="@style/hint_text_default_small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y40"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x27"
                android:background="@null"
                android:drawableLeft="@mipmap/live_details_full_renshu"
                android:drawablePadding="@dimen/x5"
                android:gravity="bottom"
                android:text="23k"
                android:textColor="@color/white"/>
            <!--粉丝数-->
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_Top_fans"
                style="@style/hint_text_default_small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y40"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x27"
                android:background="@null"
                android:drawableLeft="@mipmap/live_details_full_fans"
                android:drawablePadding="@dimen/x5"
                android:gravity="bottom"
                android:text="23k"
                android:textColor="@color/white"/>
            <!--是否关注-->
            <CheckBox
                android:visibility="gone"
                android:id="@+id/cb_landTop_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x27"
                android:background="@drawable/like_selector"
                android:button="@null"/>
            <!--一键分享-->
            <ImageButton
                android:id="@+id/live_details_Top_full_share"
                style="@style/Live_Details_ImageButton"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x27"
                android:src="@mipmap/live_details_share"/>
            <!--横屏播放器设置-->
            <ImageButton
                android:visibility="gone"
                android:id="@+id/live_details_landTop_full_setting"
                style="@style/Live_Details_ImageButton"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x13"
                android:src="@mipmap/live_details_full_more"/>
        </LinearLayout>
        <!--缓冲中-->
        <LinearLayout
            android:id="@+id/ll_loadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="视频缓冲中...."
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

        </LinearLayout>

        <!--底部布局-->
        <RelativeLayout
            android:id="@+id/rl_bottom_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
