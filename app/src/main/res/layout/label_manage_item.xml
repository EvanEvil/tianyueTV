<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/label_manage_label"
        style="@style/label_manage"
        android:layout_marginTop="@dimen/y22"
        tools:text="标签管理" />
    <ImageView
        android:id="@+id/label_manage_label_cancel"
        android:layout_alignTop="@id/label_manage_label"
        android:layout_alignBottom="@id/label_manage_label"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cancel_label"/>
    <ImageView
        android:id="@+id/label_manage_label_alter"
        android:layout_marginRight="@dimen/x28"
        android:layout_alignTop="@id/label_manage_label"
        android:layout_alignBottom="@id/label_manage_label"
        android:layout_toLeftOf="@id/label_manage_label_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/alter_label"/>
</RelativeLayout>