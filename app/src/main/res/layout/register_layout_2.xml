<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/register_two_toolbar"
        style="@style/toolbar"
        toolbar:navigationIcon="@mipmap/back">
        <!-- 标题 -->
        <TextView
            android:id="@+id/register_two_title"
            android:layout_gravity="center"
            style="@style/title"
            android:text="注册" />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/register_plaint"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginTop="@dimen/y8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/register_plaint"/>
        <TextView
            android:text="昵称是您在平台的唯一标识"
            android:layout_marginLeft="@dimen/x12"
            style="@style/hint_text_default"
            android:layout_alignTop="@id/register_plaint"
            android:layout_toRightOf="@id/register_plaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_marginLeft="@dimen/x34"
            android:layout_marginRight="@dimen/x34"
            android:layout_marginTop="@dimen/y50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y160">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="昵称"
                    style="@style/text_default_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/register_two_nickname"
                    android:hint="请输入您的昵称"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    style="@style/hint_text_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:background="#666666"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_height="1dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="密码"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x16"
                    style="@style/text_default_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/register_two_password"
                    android:maxLength="16"
                    android:layout_weight="1"
                    android:hint="密码至少6位数字"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:inputType="textPassword"
                    style="@style/hint_text_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/register_two_state_password"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_width="@dimen/x36"
                    android:layout_height="@dimen/y23"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/password_state"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/register_two_finish"
            android:textColor="#ffffff"
            android:enabled="false"
            android:layout_marginLeft="@dimen/x34"
            android:layout_marginRight="@dimen/x34"
            android:layout_marginTop="@dimen/y250"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:text="完成"
            android:background="@drawable/login_clickable"/>
    </RelativeLayout>
