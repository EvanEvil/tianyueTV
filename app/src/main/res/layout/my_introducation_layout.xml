<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_introduction_toolbar"
        style="@style/toolbar"
        toolbar:navigationIcon="@mipmap/back">
        <TextView
            android:layout_gravity="center"
            style="@style/title"
            android:text="个人作品及视频" />
        <TextView
            android:layout_gravity="right"
            style="@style/title"
            android:text="管理" />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:background="@color/gary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        style="@style/text_default"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginLeft="@dimen/x10"
        android:drawablePadding="@dimen/x15"
        android:textColor="@color/textDefault"
        android:text="个人作品及视频"
        android:drawableLeft="@mipmap/my_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="17sp"
        android:text="全选"
        android:visibility="gone"
        android:drawablePadding="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_alignParentRight="true"
        android:drawableLeft="@mipmap/confirm"
        android:layout_marginTop="@dimen/y10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <GridView
        android:id="@+id/my_introduction_list"
        android:numColumns="2"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></GridView>
</LinearLayout>