<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/certification_finish_toolbar"
        style="@style/toolbar"
        toolbar:navigationIcon="@mipmap/back">
        <!-- 标题 -->
        <TextView
            android:id="@+id/certification_notice_title"
            style="@style/title"
            android:layout_gravity="center"
            android:text="申请完成" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y55"
        android:gravity="center_horizontal"
        android:text="我们已收到您的申请"
        android:textColor="@color/textDefault"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/y30"
        android:text="      天越网会在1-3天完成审核,届时将已 短信/邮件 的方式告知您结果，感谢您的耐心等待."
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/y30"
        android:text="认证成功后,您可以在   '我的'—’我的直播’  页面进行直播."
        android:textSize="17sp" />

    <Button
        android:id="@+id/certification_finish"
        style="@style/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y125"
        android:background="@drawable/login_clickable"
        android:text="完成"
        android:textColor="@color/white" />
</LinearLayout>