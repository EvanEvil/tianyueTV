<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager
            android:id="@+id/guide_layout_viewPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>
    </LinearLayout>
    <ImageButton
        android:id="@+id/guide_layout_start"
        android:layout_above="@id/guide_layout_indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y32"
        android:visibility="gone"
        android:background="@drawable/guide_btn_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/guide_layout_indicator"
        android:layout_marginBottom="@dimen/y110"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>