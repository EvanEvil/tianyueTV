<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/y7"
    android:layout_marginBottom="@dimen/y7"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/live_column_child_pic"
        tools:src="@mipmap/tu_1"
        android:scaleType="fitXY"
        android:layout_width="@dimen/x223"
        android:layout_height="@dimen/y118" />
    <TextView
        android:layout_marginTop="@dimen/y7"
        android:id="@+id/live_column_child_title"
        android:layout_alignLeft="@id/live_column_child_pic"
        android:layout_below="@id/live_column_child_pic"
        android:textColor="@android:color/black"
        style="@style/text_default"
        tools:text="老王给你说木材"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/live_column_child_nickName"
        android:layout_alignLeft="@id/live_column_child_pic"
        android:layout_alignRight="@id/live_column_child_pic"
        style="@style/hint_text_default_small"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x5"
        tools:text="王老五"
        android:textColor="@color/white"
        android:layout_alignBottom="@id/live_column_child_pic"
        android:background="#a8000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y19" />
    <ImageView
        android:id="@+id/live_column_child_renshu"
        android:src="@mipmap/live_home_renshu"
        android:layout_alignRight="@id/live_column_child_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/live_column_child_number"
        android:textSize="9sp"
        android:layout_alignRight="@id/live_column_child_pic"
        android:layout_alignTop="@id/live_column_child_renshu"
        android:layout_alignBottom="@id/live_column_child_renshu"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/x2"
        tools:text="11k"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>