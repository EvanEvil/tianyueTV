<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_home"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
    <TextView
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RadioGroup
        android:id="@+id/home_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/home_rb"
            android:drawableTop="@drawable/live_check"
            android:checked="true"
            android:text="直播"
            style="@style/home_radioButton"/>
        <RadioButton
            android:id="@+id/discovery_rb"
            android:drawableTop="@drawable/discovery_check"
            android:text="发现"
            style="@style/home_radioButton" />
        <RadioButton
            android:id="@+id/my_rb"
            android:drawableTop="@drawable/my_check"
            android:text="我的"
            style="@style/home_radioButton"/>
    </RadioGroup>
</LinearLayout>