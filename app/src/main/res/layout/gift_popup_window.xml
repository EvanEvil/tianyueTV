<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44">
        <TextView
            android:layout_marginLeft="@dimen/x9"
            android:text="我的财富:"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_default_large"/>
        <TextView
            tools:text="300"
            android:layout_marginLeft="@dimen/x5"
            android:gravity="right"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_width="@dimen/x80"
            android:layout_height="wrap_content"
            style="@style/text_default_large"/>
        <TextView
            android:layout_margin="@dimen/x6"
            android:text="越币"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_default_large"/>
        <Button
            android:layout_marginLeft="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:text="充值"
            android:enabled="false"
            android:textColor="@color/white"
            style="@style/hint_text_default_small"
            android:background="@drawable/pay_button_selector"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y30" />
        <TextView
            android:layout_marginTop="@dimen/y10"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x20"
            android:background="#d2d2d2"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            tools:text="300"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="right"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_width="@dimen/x80"
            android:layout_height="wrap_content"
            style="@style/text_default_large"/>
        <TextView
            android:layout_margin="@dimen/x6"
            android:text="灵桃"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_default_large"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2"/>
    <LinearLayout
        android:layout_marginTop="@dimen/y8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匠人桃"
            android:drawablePadding="@dimen/y5"
            android:gravity="center"
            android:drawableTop="@mipmap/gift_peach"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匠人桃"
            android:drawablePadding="@dimen/y5"
            android:gravity="center"
            android:drawableTop="@mipmap/gift_peach"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匠人桃"
            android:drawablePadding="@dimen/y5"
            android:gravity="center"
            android:drawableTop="@mipmap/gift_glass"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匠人桃"
            android:drawablePadding="@dimen/y5"
            android:gravity="center"
            android:drawableTop="@mipmap/gift_drum"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/y16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匠人桃"
            android:drawablePadding="@dimen/y5"
            android:gravity="center"
            android:drawableTop="@mipmap/gift_peach"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匠人桃"
            android:drawablePadding="@dimen/y5"
            android:gravity="center"
            android:drawableTop="@mipmap/gift_peach"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匠人桃"
            android:drawablePadding="@dimen/y5"
            android:gravity="center"
            android:drawableTop="@mipmap/gift_glass"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匠人桃"
            android:drawablePadding="@dimen/y5"
            android:gravity="center"
            android:drawableTop="@mipmap/gift_drum"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/y8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2"/>
</LinearLayout>