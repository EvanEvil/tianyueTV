<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- toolbar样式 -->
    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 标题文字默认样式 -->
    <style name="title_text_default">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textDefault</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- 提示文字默认样式 -->
    <style name="hint_text_default">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 提示文字样式 小号 -->
    <style name="hint_text_default_small">
        <item name="android:textSize">11sp</item>
    </style>

    <!-- 标准文字默认样式 -->
    <style name="text_default">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- 标准文字默认样式 -->
    <style name="text_default_large">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 提示文字样式 颜色灰色 -->
    <style name="hint_text_gray" parent="hint_text_default">
        <item name="android:textColor">@color/textDefault</item>
    </style>
    <!-- 标准文字样式 颜色灰色 -->
    <style name="text_default_gray" parent="text_default">
        <item name="android:textColor">@color/textDefault</item>
    </style>

    <!-- 标题样式 -->
    <style name="title" parent="title_text_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/y12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 顶部返回按钮样式 -->
    <style name="back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">@dimen/y20</item>
        <item name="android:src">@mipmap/back</item>
        <item name="android:background">@null</item>
    </style>
    <!-- 按钮样式  -->
    <style name="buttonTextSize">
        <item name="android:textSize">13sp</item>
    </style>
    <!-- 主播昵称样式 -->
    <style name="anchorName">
        <item name="android:textSize">13sp</item>
    </style>
    <!-- 充值数量选项样式 -->
    <style name="rechargeNumber">
        <item name="android:background">@drawable/recharge_check</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 充值界面提示字体样式 -->
    <style name="rechargeFont">
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    <!-- 支付界面字体样式 -->
    <style name="payFont">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="home_radioButton" parent="hint_text_default_small">
        <item name="android:drawablePadding">@dimen/y3</item>
        <item name="android:paddingTop">@dimen/y3</item>
        <item name="android:paddingBottom">@dimen/y3</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 设置界面样式 -->
    <style name="settings" parent="text_default">
        <item name="android:layout_marginTop">@dimen/y2</item>
        <item name="android:background">@drawable/settings_focused</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/y10</item>
        <item name="android:textColor">@color/textDefault</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="barrage_settings_seekbar" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:thumb">@mipmap/decode_checked</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>
    <style name="barrage_settings_text" >
        <item name="android:padding">10dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="barrage_settings_danmaku" parent="hint_text_default" >
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/y5</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dip</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="personal_info_text" parent="text_default">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/x15</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="label_manage" parent="text_default">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/label</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="live_setting_label" parent="label_manage">
        <item name="android:layout_marginLeft">@dimen/x25</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="personal_info_text_left" parent="text_default">
        <item name="android:textColor">@color/textDefault</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/x15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 我的界面样式 -->
    <style name="my_button" parent="hint_text_default">
        <item name="android:paddingTop">@dimen/y25</item>
        <item name="android:paddingBottom">@dimen/y25</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/y21</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 播放界面ImageButton样式 -->
    <style name="Live_Details_ImageButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- 自定义dialog -->

    -<style parent="android:style/Theme.Dialog" name="dialog_tran">

    <item name="android:windowFrame">@null</item>

    <item name="android:windowNoTitle">true</item>

    <item name="android:windowBackground">@android:color/transparent</item>

    <item name="android:windowIsFloating">true</item>

    <item name="android:windowContentOverlay">@null</item>

    <item name="android:windowIsTranslucent">true</item>

    <item name="android:backgroundDimEnabled">false</item>

    <item name="android:backgroundDimAmount">0.4</item>

</style>


    -<style parent="dialog_tran" name="dialog_untran">

    <item name="android:backgroundDimEnabled">true</item>

</style>


    -<style name="main_menu_animstyle">

    <item name="android:windowEnterAnimation">@anim/form_bottom_dialog_in_anim</item>
    <item name="android:windowExitAnimation">@anim/form_bottom_dialog_out_anim</item>

</style>
</resources>
